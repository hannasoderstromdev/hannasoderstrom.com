/* 
	Structured according to SMACSS (Scalable Modular Architecture for CSS)
	See here for more: http://tv.adobe.com/watch/adc-presents-smacss/

	1. Base 	- Reset and default styles
	2. Layout 	- Header, Main, Footer, Grid and similar
	3. Modules 	- Content inside specific areas, lists and widgets
	4. States 	- Hidden, collapsed and JS-related styles
	5. Theme 	- Additional variations on content (language-related and other)

*/


// 	1. BASE
@import 'reset.css'

body
	font-family 'Yanone Kaffeesatz'
	color #A8A8A8
	background #cacaca

a
	color #2e8bcc
	&:hover
		color #eee
		text-decoration none

h1
	font-size 9em
	margin 0 0 0% 7.5%
	color #191919
	text-align left

h1.webdeveloper-title
	text-align center
	margin 0

h1.educator-title
	text-align right
	margin 0 8.5% 0

h2
	font-size 5em
	font-weight bold
	margin 18% 0 8% 0

h3
	font-size 2.3em
	margin 12% 0 0
	font-weight normal

h3 a
	text-decoration none

h4
	font-size 2em
	margin 9% 0 2% 0
	font-style italic

p
	line-height 1.45em
	font-size 2em
	font-weight 100

img
	border 2px solid white
	box-shadow 0 3px 2px rgba(0,0,0, .15)

.error
	color red

label
	font-size 2.5em
	display block
	margin 1% 0 1% 0
	text-align right

label:last-of-type
	text-align left

input[type=text], input[type=email]
	border 1px solid #ccc
	border-radius 3px
	padding 1% 1%
	margin-left 2%
	outline none
	width 50%
	box-shadow inset 0 1px 3px rgba(0, 0, 0, .35)
	vertical-align top

input:focus
	outline 1px solid #2e8bcc

input[type=submit]
	font-family 'Yanone Kaffeesatz', sans-serif
	font-size 2.6em
	color #bbb
	float right
	margin 1% 0 0
	padding .5% 5%
	border 1px solid #fff
	border-radius 3px
	outline none
	border-radius 2px
	background: -moz-linear-gradient(top, rgba(240,240,240,1) 0%, rgba(250,250,250,1) 50%, rgba(240,240,240,1) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(240,240,240,1)), color-stop(50%,rgba(250,250,250,1)), color-stop(100%,rgba(240,240,240,1))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, rgba(240,240,240,1) 0%,rgba(250,250,250,1) 50%,rgba(240,240,240,1) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, rgba(240,240,240,1) 0%,rgba(250,250,250,1) 50%,rgba(240,240,240,1) 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top, rgba(240,240,240,1) 0%,rgba(250,250,250,1) 50%,rgba(240,240,240,1) 100%); /* IE10+ */
	box-shadow 0 2px 2px rgba(0, 0, 0, .35)
	&:hover
		border 1px solid #2e8bcc
		color #222
select
	width 50%
	padding .5% 1%
	border-radius 3px
	vertical-align top

textarea
	display block
	width 100%
	min-height 200px
	border 1px solid #ccc
	border-radius 3px
	padding 1%

textarea:focus
	outline 1px solid #2e8bcc

/* 
	2. LAYOUT
		l-prefix: l-header, l-sidebar
*/

body
	width 100%
	height auto
	padding 0
	margin 0

footer
	text-align center
	color #ddd
	font-size 2em

form
	col(1,1)

.hidden
	display none

#quotes,
.quotes, 
#webdeveloper, 
#educator, 
#debater, 
#contact
	cf()

#webdeveloper,
#educator,
#debater
	margin 6% 0 0

#l-wrapper
	position relative
	center(1600px, 0px)
	box-shadow 0 2px 3px rgba(0, 0, 0, .15)
	background #fff
	margin 2% 0 0
	padding 0

.l-left-column, 
.l-right-column
	span(1,2)

.l-left-column
	padding 0 1.5% 6% 8%

.l-right-column
	padding 0 8% 0 1.5%

#scrollMenu
	display block
	width 100%
	height auto
	background rgba(255, 255, 255, .75)
	box-shadow 0 2px 3px rgba(0, 0, 0, .15)
	text-align center
	margin 0
	position fixed
	top 0
	font-size 2.2em
	padding 5px 3%	
	cf()
	img
		max-width 35px
		vertical-align bottom
		border none
		box-shadow none
	a
		vertical-align top
		text-decoration none
		display inline-block
		margin 2% 1%
		&:hover
			color #222

.l-twitter
	margin 20% 0 0

.l-center
	center(700px, 0)
	padding 0
	h3
		margin 0 0 2% 0
		display inline-block

#footer
	width 100%
	padding 2% 7%
	cf()
	h2
		margin 0
#contact
	col(1,2)
#books, #cv
	col(1,2)

.books-list
	cf()
	font-size 1.3em
	list-style-type none
	padding 0
	ul
		list-style-type none
		padding 0
		
.book-item li
	col(1,3)

/* 
	3. MODULES
		btn, btn-small, btn-medium, btn-large
*/

.main-header-img-hanna,
.main-header-img-icon
	box-shadow none
	border none
	position absolute

.main-header-img-hanna
	right 10px
	top -24px

.main-header-img-icon
	left 20px
	top 20px

.main-header-title
