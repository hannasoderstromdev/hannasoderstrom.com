	font-weight bold
	text-align center
	color #191919
	margin 12% 0 0
	a
		text-decoration none
		color #222

.main-navigation
	margin 4% 0
	font-size 3em
	text-align center
	font-weight 300
	a
		margin 0 3%
		text-decoration none
		vertical-align top
		display inline-block
		&:hover
			color #aaa
	img
		border none
		box-shadow none
		vertical-align bottom

.quotes
	padding 2% 4%	
	background #191919
	img
		border 2px solid #eee
		box-shadow 0 2px 2px rgba(0, 0, 0, .45)
	p
		font-size 1.3em
		margin 0 0 4% 0

.quotes-testemony
	col(1,3, 0, 2)
	cf()

.quotes-testemony-author, 
.quotes-testemony-author-single
	stack(l)
	margin 14% 0 0
	p
		margin 10% 0 0
		text-align right

.quotes-testemony-single
	col(2,3)
	offset(1)
	margin 10% 0 0

.h-card
	float left

.quotes-testemony-author-image
	float right

#skills,
#websites,
#educator
	width 100%
	margin 4% 0
	h2
		margin 4% 0 1%

.skills-list
	col(1,3)
	margin 0
	padding 4% 0
	font-size 2em
	list-style-type none
	text-align right
	span
		color #2e8bcc

#skill-html5,
#skill-css3,
#skill-js,
#skill-jquery,
#skill-respd,
#skill-phpoop,
#skill-mysql,
#skill-wordpress,
#skill-codeigniter,
#skill-photoshop,
#skill-illustrator,
#skill-premiere,
#skill-audition,
#skill-sublime
	cursor pointer

.skills-details
	padding-left 2%
	padding-right 2%
	padding-bottom 1.5%
	box-shadow inset 0 2px 3px rgba(0,0,0,.25)
	p, ul
		font-size 1.5em
		margin 2% 0
		padding 0
	article
		border-right 2px dashed #ccc
		border-bottom 2px dashed #ccc
		border-left 2px dashed #ccc
		padding 2em
		cf()
		img
			float right
			margin-left 2%
			box-shadow none
.details
	display none

.websites-list
	margin 2% 0

.websites-site
	width 100%
	height auto
	position relative

.website-link
	font-size 1.4em
	position absolute
	bottom 18%
	right 14px
	padding 0 0 5px 35px
	background url('../../images/icons/ext-link.png') no-repeat

.website-content p,
.educator-field p
	font-size 1.5em
	margin 0

p.website-description
	margin 2% 0
	font-size 1.2em

.website-screenshot
	width 100%
	height auto
	border 1px solid #eee
	box-shadow 0 1px 2px rgba(0, 0, 0, .15)

.website-tags,
.media-tags
	margin 1% 0 4%
	padding 0
	li
		display inline
		margin 1% 2%
		font-variant small-caps

.educator
	margin 3% 0
	cf()
	h3
		margin 0 0 2%

.educator-field,
.educator-image
	col(1,3,0,2)

.educator-links,
.debater-links,
.media-links
	font-size 1.3em
	padding 0 0 0 2%
	margin 2% 0 4% 1%
	li
		line-height 1.25em
		margin 0 0 3%
		list-style-type none

.info
	min-height 300px
	border 1px solid #ccc
	box-shadow 0 2px 2px rgba(0, 0, 0, .15)
	display none

.current
	display block

.photoshop
	max-width 450px
	width 100%
	border 2px solid #eee
	box-shadow 0px 2px 2px rgba(0, 0, 0, .45)

#webdeveloper .subtitle
	margin 0% 4%

.required
	float left

#slider
	center()
	margin 6% 2% 0
	max-width 640px
	height 353px
	position relative
#slider-shadow
	margin -361px auto 0 auto
	max-width 657px
	height 478px
	background url('../../images/slider/computer.png') top no-repeat
#slider-inner
	width 9999px
	height 353px
	margin 0
	padding 0
	z-index 0
	position relative
	left -640px
	list-style-type none
	li
		float left
		max-width 640px
		width 100%
		padding 0
		margin 0
		height 353px
		background transparent
		list-style-type none
		img
			max-width 640px
			width 100%
			height 353px

#slider-mask
	overflow hidden
	width 640px
	height 353px

#goLeft, 
#goRight
	width 50px
	height 43px
	position absolute
	top 166px
	z-index 50
	transition opacity .3s ease-out
	opacity 0
	display block
	cursor pointer
	&:hover
		opacity 1
#goLeft
	background url('../../images/slider/arrows.png') no-repeat -50px 0
	left 10px
	&:hover
		background url('../../images/slider/arrows.png') no-repeat 0 0
#goRight
	background url('../../images/slider/arrows.png') no-repeat -50px -43px
	right 10px
	&:hover
		background url('../../images/slider/arrows.png') no-repeat 0 -43px

#slider:hover #goLeft,
#slider:hover #goRight
	opacity .8

/* 
	4. STATES
		is-prefix: is-btn-active, is-btn-hidden
*/

.rotate img
	transition-duration 1s
	transition-property transform
	overflow hidden
	margin -5px 0 0 5px

.rotate:hover img
	transform:rotateY(360deg)

.website-toggle
	display block
	position absolute
	bottom 5px
	right 10px
	width 26px
	height 25px
	cursor pointer	
	transition-duration .1s
	transition-property transform

.website-toggle
	background url('../../images/websites/arrDown.png') no-repeat
	&:hover
		transform:translate(0, 5px)

.is-website-expanded
	background url('../../images/websites/arrUp.png') no-repeat
	&:hover
		transform:translate(0, -5px)

.is-details-expanded
	color #eee

.website-content
	display none
	margin 2% 0
	padding 2% 4%
	border-bottom 1px solid #ccc

/* 
	5. THEME
		theme-prefix: theme-border, theme-background
*/

.dark
	background #191919
	cf()

// LIGHTBOX EFFECT

#backdrop
	display none
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	z-index 50
	opacity 0
	background rgba(0, 0, 0, .75)
#box
	opacity 0
	display none
	position absolute
	top 20%
	left 30%
	width 600px
	height 400px
	background #eee
	z-index 51
	padding 2em
	border-radius 5px
	box-shadow 0 2px 2px rgba(0, 0, 0, .35)
#close
	float right
	margin 0 6px 0 0
	cursor pointer

